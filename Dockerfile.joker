# syntax=docker/dockerfile:1.7-labs

# Installs https://github.com/candid82/joker.

ARG GOROOT
ARG GO_PATH
ARG GOBIN

################################################################################
FROM go AS joker
################################################################################

ARG GOROOT
ARG GO_PATH
ARG GOBIN

#-------------------------------------------------------------------------------
# build dependencies
# ------------------------------------------------------------------------------

RUN bash -x <<"EOF"
set -eu
rm -f /etc/apt/apt.conf.d/docker-clean
apt-get update
apt-get install -y --no-install-recommends \
    ca-certificates \
    build-essential \
    git
apt-get clean
apt-get autoremove -y
rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* /var/cache/*
EOF

# ------------------------------------------------------------------------------
# joker
# ------------------------------------------------------------------------------

RUN bash -x <<"EOF"
set -eu
export PATH=${GO_PATH}:$PATH
git clone https://github.com/candid82/joker.git
pushd joker
./run.sh --version && go install
popd
rm -rf joker
EOF
